@page
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h3 class="text-center">SignalR Chat Demo</h3>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label for="userInput">Username</label>
                        <input type="text" class="form-control" id="userInput" placeholder="Enter your username" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="messageInput">Message</label>
                        <textarea class="form-control" id="messageInput" rows="2" placeholder="Type your message"></textarea>
                    </div>
                    <button type="button" id="sendButton" class="btn btn-primary w-100">Send Message</button>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    <ul id="messagesList" class="list-unstyled"></ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
} 